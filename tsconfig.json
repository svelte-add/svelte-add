{
    "exclude": ["**/build/**", "**/temp/**", "**/website/**", "**/coverage/**"],
    "compilerOptions": {
        "checkJs": true,
        "module": "es2022",
        "moduleResolution": "node",
        "target": "es2022",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "build/"
    }
}
